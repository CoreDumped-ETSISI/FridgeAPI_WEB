extends header_layout

block main-content
    .col.s12.m8.offset-m2.l4.offset-l4.z-depth-4.card-panel(style='padding: 2em')
        .login-form
            .row(style='margin-bottom: 0em')
                .input-field.col.s12
                    input#email.validate(type='email')
                    label(for='email' data-error='wrong' data-success='right') Enter your user email
            .row
                .col.s12.l8.push-l4.margin-bottom
                    a.btn.verde-core.waves-effect.waves-light.texto-oscuro.col.s12(href='#' onclick='recover()') I forgot my password
                .col.s4.l4.pull-l8
                    a.btn.rojo.waves-effect.waves-light.texto-oscuro.col.s12(href='/')
                        i.material-icons.left.tiny arrow_back
                        span back
            .row.center
                .col.s12
                    include switch.pug
block scripts
    script(src='/js/forgotPassword.js')
